<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/quiz_topic_card_min_height"
    android:layout_marginTop="@dimen/cardview_default_elevation"
    android:layout_marginBottom="@dimen/cardview_default_elevation"
    card_view:cardCornerRadius="@dimen/cardview_default_elevation">

    <TextView
        android:id="@+id/topic"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/quiz_topic_title_size"
        android:text="Math"/>

</android.support.v7.widget.CardView>